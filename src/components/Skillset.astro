---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<article>
    <h3 class="text-2xl text-center my-4">{title}</h3>
    <div class="flex justify-evenly items-center border-2 border-gray-300 p-4 rounded-xl max-w-xs lg:max-w-3xl mx-auto text-xl shadow-md shadow-black bg-gray-100">
        <slot />
    </div>
</article>